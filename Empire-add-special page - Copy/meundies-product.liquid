{{ 'meundies.css' | asset_url | stylesheet_tag }}
{{ 'jquery.mobile.structure-1.4.5.min.css' | asset_url | stylesheet_tag }}
<script src="{{ 'jquery-3.2.1.min.js' | asset_url}}"></script>
<script src="{{ 'jquery.mobile-1.4.5.min.js' | asset_url}}"></script>
<script src="{{ 'meundies.js' | asset_url }}"></script>

<div class="pdp">
   <div class="pdp-main-section">
      <div class="pdp-slides" data-current-slide-index="0" data-previously-selected-sizes="[]" ready="true">
         {% assign featured_image = current_variant.featured_image | default: product.featured_image %}
         {% comment %}
         Display current variant image, or default first
         {% endcomment %}
         <div class="pdp-slide" data-image-url="{{ featured_image | img_url: '1024x' }}" data-image-id="{{ featured_image.id }}" alt="{{ featured_image.alt | escape }}" style="background-image: url('{{ featured_image | img_url: '1024x' }}');
            opacity: 1;
            visibility: visible; background-color: #fc929c; "></div>
         {% comment %}
         Display rest of product images, not repeating the featured one
         {% endcomment %}
         {% for image in product.images %}
         {% unless image contains featured_image %}
         <div class="pdp-slide" data-image-url="{{ image.src | img_url }}" data-image-id="{{ image.id }}" alt="{{ image.alt | escape }}" style="background-color: #fc929c; background-image: url('{{ image | img_url: '1024x' }}');"></div>
         {% endunless %}
         {% endfor %}
      </div>
      <div class="mobile-subscribe-tooltip">
         <div class="mobile-subscribe-tooltip-inner">
            <div class="mobile-subscribe-tooltip-exit close"></div>
            <div class="mobile-subscribe-tooltip-title">
               Frigo Membership
            </div>
            <div class="mobile-subscribe-tooltip-description">
               Become a member, and youâ€™ll receive a fresh pair from your favorite plan at the same time every month and save up to 33%.
               <br>
               <br>
               You can switch plans, skip a month, or cancel any time.
               <br>
               <br>
               What are the plan options?
            </div>
            <div class="subscribe-tooltip-plans">
               <div class="subscribe-tooltip-plan classic">
                  <div class="subscribe-tooltip-plan-name">
                     Classic
                     <div class="subscribe-tooltip-plan-description-note new">NEW</div>
                  </div>
                  <div class="subscribe-tooltip-plan-description">
                     Keep it classic with neutral solids that never go out of style.
                  </div>
               </div>
               <div class="subscribe-tooltip-plan bold">
                  <div class="subscribe-tooltip-plan-name">
                     Bold
                     <div class="subscribe-tooltip-plan-description-note new">NEW</div>
                  </div>
                  <div class="subscribe-tooltip-plan-description">
                     Make a statement with bold, solid colors.
                  </div>
               </div>
               <div class="subscribe-tooltip-plan adventurous">
                  <div class="subscribe-tooltip-plan-name">
                     Adventurous
                  </div>
                  <div class="subscribe-tooltip-plan-description">
                     Show your spirit with unique, fun prints.
                     <div class="subscribe-tooltip-plan-description-note">(Previously Design of the Month)</div>
                  </div>
               </div>
            </div>
            <div class="mobile-subscribe-tooltip-back close">
               Back to shopping
            </div>
         </div>
         <div class="mobile-subscribe-tooltip-overlay close"></div>
      </div>
      <div class="pdp-main-section-inner">
         <div class="clearfix pdp-mobile-title">
            <div class="pdp-mobile-title-text">
               <div class="pdp-mobile-title-text-container">
                  <span>Men's Boxer Brief</span>
                  <span class="pack-count"></span>
               </div>
            </div>
            <a class="pdp-mobile-back-button" href=""><img alt="Back arrow" src="https://cdn.shopify.com/s/files/1/2187/3845/files/Back_arrow.svg?10305277078206584297">
            </a>
         </div>
         <div class="pdp-slides-mobile color-gallery-container">
            <div class="pdp-slides-mobile color-gallery" data-color-name="DEFAULT">
               <div id="flickity-slider" style="height:100%;">
                  {% assign featured_image = current_variant.featured_image | default: product.featured_image %}
                  {% comment %}
                  Display current variant image, or default first
                  {% endcomment %}
                  <div class="gallery-cell preload is-selected">
                     <div class="pdp-slide-mobile">
                        <div class="full-width-image pdp-slide-mobile-image slide-selectors" data-image-url="{{ featured_image | img_url: '600x' }}" data-image-id="{{ featured_image.id }}" alt="{{ featured_image.alt | escape }}" style="background-image: url('{{ featured_image | img_url: '600x' }}'); background-color: #fc929c;"></div>
                     </div>
                     <div class="pdp-slide-tablet">
                        <div class="full-width-image pdp-slide-tablet-image slide-selectors" data-image-url="{{ featured_image | img_url: '600x' }}" data-image-id="{{ featured_image.id }}" alt="{{ featured_image.alt | escape }}" style="background-image: url('{{ featured_image | img_url: '600x' }}'); background-color: #fc929c;"></div>
                     </div>
                  </div>
                  {% comment %}
                  Display rest of product images, not repeating the featured one
                  {% endcomment %}
                  {% for image in product.images %}
                  {% unless image contains featured_image %}
                  <div class="gallery-cell preload" style="display:none;">
                     <div class="pdp-slide-mobile">
                        <div class="full-width-image pdp-slide-mobile-image slide-selectors" data-image-url="{{ image | img_url: '600x' }}" data-image-id="{{ image.id }}" alt="{{ image.alt | escape }}" style=" background-image: url('{{ image | img_url: '600x' }}'); background-color: #fc929c"></div>
                     </div>
                     <div class="pdp-slide-tablet">
                        <div class="full-width-image pdp-slide-tablet-image slide-selectors" data-image-url="{{ image | img_url: '600x' }}" data-image-id="{{ image.id }}" alt="{{ image.alt | escape }}" style=" background-image: url('{{ image | img_url: '600x' }}'); background-color: #fc929c"></div>
                     </div>
                  </div>
                  {% endunless %}
                  {% endfor %}
               </div>
            </div>
         </div>
         <div class="pdp-slide-controls">
            <div class="pdp-slide-controls-prev">
               <img alt="Left arrow small" src="https://cdn.shopify.com/s/files/1/2187/3845/files/left-arrow-small.svg?14607947031291011901">
            </div>
            <div class="pdp-slide-buttons">
               {% assign featured_image = current_variant.featured_image | default: product.featured_image %}
               <div class="pdp-slide-button active" data-image-id="{{ featured_image.id }}">
                  <div class="dot"></div>
               </div>
               {% for image in product.images %}
               {% unless image contains featured_image %}
               <div class="pdp-slide-button" data-image-id="{{ image.id }}">
                  <div class="dot"></div>
               </div>
               {% endunless %}
               {% endfor %}     
            </div>
            <div class="pdp-slide-controls-next">
               <img alt="Right arrow small" src="https://cdn.shopify.com/s/files/1/2187/3845/files/right-arrow-small.svg?14607947031291011901">
            </div>
         </div>
         <div class="pdp-slide-button-container">
            <div class="pdp-slide-button-prev">
               <div class="pdp-slide-button-prev-button">
                  <img alt="Left arrow" src="https://cdn.shopify.com/s/files/1/2187/3845/files/left-arrow.svg?14607947031291011901">
               </div>
            </div>
            <div class="pdp-slide-button-next">
               <div class="pdp-slide-button-next-button">
                  <img alt="Right arrow" src="https://cdn.shopify.com/s/files/1/2187/3845/files/right-arrow.svg?14607947031291011901">
               </div>
            </div>
         </div>
         <form method="post" action="/cart/add" data-product-form>
         <div class="pdp-product-form-container">
            <div class="has-colors has-sizes pdp-product-form" data-product="">
               <div class="pdp-product-form-content">
                  <div class="pdp-product-form-title">{{ product.title }}</div>
                  <div class="pdp-product-form-subscribable-price-block">
                     <span class="pdp-product-form-price">
                     {{ product.price | money_without_trailing_zeros }}
                     </span>
                     <span class="pdp-product-form-subscribe-price" style="display: none;">
                     $16/month
                     </span>
                  </div>
                  <div class="pdp-product-form-sizes-label">
                     Sizes:
                     <a data-modal-id="product-sizechart-modal">View guide</a>
                  </div>
                  <div class="meundies-modal meundies-modal-dismiss size-chart-modal" id="product-sizechart-modal">
                     <div class="meundies-modal-container">
                        <a class="meundies-modal-close-button meundies-modal-dismiss size-chart-modal-close-button">â¨¯</a>
                        <div class="meundies-modal-content">
                           <div class="meundies-modal-content-inner">
                              <div class="size-chart-image-container desktop">
                                 <div class="size-chart-image" style="background-image: url(https://cdn.shopify.com/s/files/1/2187/3845/files/mens_underwear_670px_2x_071e3f3b-152e-4cdd-9449-115698a0d21d.png?11551407846871101656)"></div>
                              </div>
                              <div class="size-chart-image-container mobile">
                                 <div class="size-chart-image" style="background-image: url(https://cdn.shopify.com/s/files/1/2187/3845/files/mens_underwear_375px_2x_af70816f-8aa4-4e93-888e-8e8cffef9984.png?11551407846871101656)"></div>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
                  <div id="option-select" style="display: none;">
                     {% for option in product.options_with_values %}
                     <label>
                     {{ option.name }}
                     <select>
                     {% for value in option.values %}
                     <option {% if option.selected_value == value %}selected{% endif %}>
                     {{ value }}
                     </option>
                     {% endfor %}
                     </select>
                     </label>
                     {% endfor %} 	
                  </div>
                  <select name="id" id="ProductSelect" data-variants class="form-options no-js-required" style="display:none;">
                    {% for variant in product.variants %}
                      {% if variant.available %}
                        <option {% if variant == product.selected_or_first_available_variant %}
                          selected="selected" {% endif %}
                          data-sku="{{ variant.sku }}"
                          size="{{ variant.option1 }}"      
                          color="{{ variant.option2 }}"      
                          tab="{{ variant.option3 }}"            
                          value="{{ variant.id }}">
                          {{ variant.title }} - {{ variant.price | money_with_currency }}
                        </option>
                      {% else %}
                        <option disabled="disabled">
                          {{ variant.title }} - {{ 'products.product.sold_out' | t }}
                        </option>
                      {% endif %}
                    {% endfor %}
                  </select> 
                  <div class="form-field form-field--qty-input hidden" style="display:none;">
                    <input
                      class="form-field-input form-field-number form-field-filled"
                      value="1"
                      name="quantity"
                      type="text"
                      pattern="\d*"
                      aria-label="{{ 'general.general.quantity' | t }}"
                      data-quantity-input
                    >
                    <label class="form-field-title">{{ 'general.general.quantity' | t }}</label>
                  </div>                 
                  <ul class="pdp-product-form-sizes">
                     {% for option in product.options_with_values %}
                     {% if option.name contains "Size" %}
                     {% for value in option.values %}
                     <li class="pdp-product-form-size-selector" data-size-presentation="{{ value }}">{{ value }}</li>
                     {% endfor %}
                     {% endif %}
                     {% endfor %}      	
                     <a class="pdp-product-form-mobile-size-guide-link" data-modal-id="product-sizechart-modal">Size guide</a>
                  </ul>
                  <ul class="pdp-tabs" data-tab="">
                     {% for option in product.options_with_values %}
                     {% if option.name contains "Tab" %}
                     {% for value in option.values %}
                     <li class="pdp-tab" data-color-type="{{ value }}">
                        <a class="pdp-tab-inner" href="#">{{ value }}</a>
                        <div class="dongle"></div>
                     </li>
                     <li class="pdp-tab-divider">/</li>
                     {% endfor %}
                     {% endif %}
                     {% endfor %}  
                  </ul>
                  <div class="pdp-tab-content active" id="classic">
                     <div class="pdp-product-form-colors-label" data-colors="">
                        <span class="color-presentation"></span>
                     </div>
                     <div class="pdp-product-form-colors-container">
                        <ul class="pdp-product-form-colors">
                           {% for option in product.options_with_values %}
                           {% if option.name contains "Color" %}
                           {% for value in option.values %}
                           <li class="pdp-product-form-color-selector shown" data-color-type="classic" data-name="BL" data-presentation="{{ value }}">
                              <div class="pdp-product-form-color-selector-swatch" style="background-color:{{ value }}"></div>
                           </li>
                           {% endfor %}
                           {% endif %}
                           {% endfor %} 
                        </ul>
                     </div>
                  </div>
                  <div class="product-form-subscribe-block">
                     <div class="product-form-subscribe-block-text active">
                        <div class="product-form-subscribe-title-block">
                           <div class="product-form-subscribe-checkbox">
                              <input class="subscribe-checkbox-input" type="checkbox">
                              <div class="subscribe-checkbox-input-label"></div>
                           </div>
                           <div class="product-form-subscribe-title-block-title">
                              Join and Save
                              <span class="percent-savings">33%</span>
                           </div>
                        </div>
                        <div class="product-form-subscribe-block-description">
                           Get a new, curated <strong><span class="plan-name"></span></strong>
                           pair for <strong>only <span class="plan-price">$16</span>/month</strong>.
                           Skip or cancel anytime.
                           <a class="product-form-subscribe-block-learn-more">Learn More</a>
                        </div>
                     </div>
                  </div>
                  <button type="submit" class="pdp-product-form-add-to-cart-button pdp-product-form-add-to-cart-button-selector addtocart" data-add-to-cart-and-subscribe-text="Add to Bag and Join">
                  Add to Bag
                  </button>
                  <div class="product-form-subscribe-tooltip">
                     <div class="product-form-subscribe-tooltip-inner">
                        <div class="product-form-subscribe-tooltip-exit close"></div>
                        <div class="product-form-subscribe-tooltip-title">
                           MeUndies Membership
                        </div>
                        <div class="product-form-subscribe-tooltip-description">
                           Become a member, and youâ€™ll receive a fresh pair from your favorite plan at the same time every month and save up to 33%.
                           <br>
                           <br>
                           You can switch plans, skip a month, or cancel any time.
                           <br>
                           <br>
                           What are the plan options?
                        </div>
                        <div class="subscribe-tooltip-plans">
                           <div class="subscribe-tooltip-plan classic">
                              <div class="subscribe-tooltip-plan-name">
                                 Classic
                                 <div class="subscribe-tooltip-plan-description-note new">NEW</div>
                              </div>
                              <div class="subscribe-tooltip-plan-description">
                                 Keep it classic with neutral solids that never go out of style.
                              </div>
                           </div>
                           <div class="subscribe-tooltip-plan bold">
                              <div class="subscribe-tooltip-plan-name">
                                 Bold
                                 <div class="subscribe-tooltip-plan-description-note new">NEW</div>
                              </div>
                              <div class="subscribe-tooltip-plan-description">
                                 Make a statement with bold, solid colors.
                              </div>
                           </div>
                           <div class="subscribe-tooltip-plan adventurous">
                              <div class="subscribe-tooltip-plan-name">
                                 Adventurous
                              </div>
                              <div class="subscribe-tooltip-plan-description">
                                 Show your spirit with unique, fun prints.
                                 <div class="subscribe-tooltip-plan-description-note">(Previously Design of the Month)</div>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
        </form>  
        <div class="ro_widget"></div>
      </div>     
   </div>
   <div class="pdp-mobile-section-header">Product Information +</div>
   <div class="pdp-mobile-section-wrap">
      {{ product.description }}
   </div>
   <div class="pdp-satisfaction-guarantee">
      <div class="pdp-satisfaction-guarantee-text-container">
         <div class="pdp-satisfaction-guarantee-title">
            100% Satisfaction Guaranteed
         </div>
         <div class="pdp-satisfaction-guarantee-text">
            Try MeUndies risk-free today. If youâ€™re not 100% satisfied, we promise to make everything right. If you have any questions, before or after purchasing, please let us know!
         </div>
         <div class="pdp-satisfaction-guarantee-contacts-container">
            <div class="pdp-satisfaction-guarantee-contact">
               <a class="pdp-satisfaction-guarantee-contact" href="tel:+18885526775">(888) 552-6775</a>
            </div>
            <div class="pdp-satisfaction-guarantee-contact">
               <a href="mailto:support@meundies.com">support@meundies.com</a>
            </div>
         </div>
      </div>
   </div>
   <div class="pdp-shipping-section">
      <div class="pdp-shipping-section-title">Free shipping to the US and Canada</div>
      <div class="pdp-shipping-section-description">
         Orders are processed within 1-2 business days via DHL. Expected arrival times vary by location.
      </div>
      <div class="pdp-shipping-section-transit">
         US: 2-7 business days
         <span class="pdp-shipping-section-split">
         |
         </span>
         Canada: 1-3 weeks
         <br>
         International: 6-10 business days
      </div>
   </div>
</div>
<style>
   .product-form-subscribe-block a {color: #25b7ff;}
   @media screen and (max-width: 600px){
   .site-header-search {display: none;}
   .site-main {padding-top: 45px !important;}
   .pdp-product-form-colors-container {text-align: center;}
   }
</style>