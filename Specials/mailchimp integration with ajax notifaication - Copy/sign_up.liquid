
<div id="prefooter-interact" class="signup-form-cont">
  <div class="interact-one-fourth interact-tagline">
    <p class="tagline">Become An In<span>filtrate</span>r:</p> 
  </div>
  <div class="interact-one-half interact-email">
    <div class="signup-form">
    {% if settings.footer_signup_action == empty %}
      
      
      
      {% comment %}
        {% form 'customer' %}
            {% if form.posted_successfully? %}
                <h4>Thank you for your interest!</h4>
                <script>window.scroll(0,1000000)</script>
            {% else %}
      			<input type="hidden" id="contact_tags" name="contact[tags]" value="prospect,newsletter"/>
      			<!-- <label for="mailinglist_email">{{ settings.text_signup }}</label>-->
     			<input type="email" placeholder="Enter your email address" class="required" value="" id="mailinglist_email" name="contact[email]" />
                <input class="submit compact foot" type="submit" value="SUBMIT"  />
                {% if form.errors %}
                  {% for field in form.errors %}
                  	<p class="error">{{ field | capitalize }} - {{ form.errors.messages[field] }}</p>
                  {% endfor %}
                {% endif %}
            {% endif %}
        {% endform %}
      {% endcomment %}
      
      
      
      <!-- Begin MailChimp Signup Form -->
        <link href="//cdn-images.mailchimp.com/embedcode/classic-10_7.css" rel="stylesheet" type="text/css">
        <style type="text/css">
            #mc_embed_signup{background:#fff; clear:left; font:14px Helvetica,Arial,sans-serif; }
