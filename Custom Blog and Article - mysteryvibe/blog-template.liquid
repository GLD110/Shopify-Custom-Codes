        <div class="grid-uniform">

            <div class="grid__item blog-tag-title">
                <div class="h1-wrap">
                    <h1 class="desktop-b-h1">
                    {% if current_tags %}
                      {{ current_tags.first }}
                    {% else %}
                      Home
                    {% endif %}
                   </h1>
                    <h1 class="mobile-b-h1">
                      {% if current_tags %}
                      <span> {{ current_tags.first }} ⌵</span>
                      {% else %}
                      <span>Home ⌵</span>
                      {% endif %}
