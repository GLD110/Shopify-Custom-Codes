                  </div>
                </div>
                <hr>
            </div>
          	
          	{% assign four_count = 0 %}
			{% for article in blog.articles %}
          	{% if article.tags contains 'Feature' and four_count < 4 %}
          	{% assign four_count = four_count | plus: 1 %}
            <div class="blog-special grid__item blog-article-item">

                <div class="rte">
                    <div class="blog-image">
                        {% if article.image %}
                        {% capture img_id %}ArticleImage-{{ section.id }}--{{ article.image.id }}{% endcapture %}
                        {% capture wrapper_id %}ArticleImageWrapper-{{ section.id }}--{{ article.image.id }}{% endcapture %}
                        {%- assign img_url = article.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                        {%- assign image_alt = article.title | escape -%}
                        <div id="{{ wrapper_id }}" class="article__image-wrapper supports-js">
                          <div class="image-div" style="padding-top:{{ 1 | divided_by: article.image.aspect_ratio | times: 100}}%;">
                            <a href="{{ article.url }}">
                            <img id="{{ img_id }}"
                                 class="article__image lazyload"
                                 src="{{ article.image | img_url: '300x300' }}"
                                 data-src="{{ img_url }}"
                                 data-widths="[90, 120, 150, 180, 360, 480, 600, 750, 940, 1080, 1296]"
                                 data-aspectratio="{{ article.image.aspect_ratio }}"
                                 data-sizes="auto"
                                 alt="{{ image_alt }}">
                            </a>
                          </div>
                        </div>
                        <noscript>
                            <p>{{ article | img_url: '1024x1024' | img_tag: image_alt, 'article__image' | link_to: article.url }}</p>
                        </noscript>
                        {% endif %}
                    </div>
                    <h2><a href="{{ article.url }}">{{ article.title }}</a></h2>
                    <a href="{{ article.url }}">
                  	<div class="blog-article-summary">                    
                    {% if article.excerpt.size > 0 %}
                      {{ article.excerpt | strip_html | truncatewords: 20}}
                    {% else %}
                      {{ article.content | strip_html | truncatewords: 20 }}
                    {% endif %}                    
                    </div>
                  	</a>
                </div>
                <p class="blog-article-readmore">
                  {{ 'small-logo.svg' | asset_url | img_tag: 'Logo'}}
                  <a href="{{ article.url }}">5 min read</a>
                </p>
              
            </div>
         	{% endif %}
            {% endfor %}
          
          
          
        {% if paginate.pages > 1 %}
