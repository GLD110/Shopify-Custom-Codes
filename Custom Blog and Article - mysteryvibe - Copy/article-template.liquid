  $(window).load(function() {
    $('.flexslider1').flexslider({
      slideshow: true,
      animation: "slide",
      directionNav: false,
      itemWidth: '100%',
      controlsContainer: $(".custom-controls-container1")
      //customDirectionNav: $(".custom-navigation1 a")
    });
  });

  // Outlet quotes
  $('.outlet-logo-wrap').find('h2').hide().eq(0).show();
  $('.flexslider2').flexslider({
    animation: "slide",
    animationLoop: true,
    slideshow: true,
    controlNav:	false,
    directionNav: false,
    slideshowSpeed: 3000,
    startAt: 3,
    after: function (slider) {
      showQuote2(slider.currentSlide + 1);
    }
  });
  function showQuote2(ind) {
    var $h2 = $('.outlet-logo-wrap').find('h2');
    $h2.eq(0).fadeOut(300)
    .promise()
    .done(function() {
      var quote = $h2.eq(ind).html();
      $h2.eq(0).html(quote).fadeIn(800);
    });
    var $img = $('.flexslider2').find('img');
    $img.removeClass('active');
    $img.eq(ind).addClass('active');
  }

  // Blog slideshow
  $(window).load(function() {
    $('.flexslider4').flexslider({
      animation: "slide",
      slideshow: false,
      directionNav: false,
      animationLoop: false,
      startAt: 1,
      itemMargin: 10
    });
  });
      
});
